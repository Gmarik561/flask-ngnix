# Use an official Python runtime as a parent image
FROM python:3.9-slim

# Set the working directory in the container
WORKDIR /app

# Copy the current directory contents into the container at /app
COPY /flask_app/. /app

# Install any needed packages specified in requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Make port 5000 available to the world outside this container
EXPOSE 5000

# Define environment variable
ENV FLASK_APP=app.py

# Install net-tools to use the 'ifconfig' command
RUN apt-get update && apt-get install -y net-tools

# Get the IP address of the other container dynamically
RUN export FLASK_APP_IP=$(ifconfig eth0 | awk '/inet / {print $2}' | cut -d ":" -f 2)

# Update /etc/hosts with the dynamically obtained IP address
RUN echo "$FLASK_APP_IP myflaskapp" >> /etc/hosts

# Run app.py when the container launches
CMD ["flask", "run", "--host=0.0.0.0"]
